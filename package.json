{
  "name": "vsc-cursor-animations",
  "displayName": "vsc-cursor-animations",
  "description": "Fancy cursor animations for vscode",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pawl-Patrol/vsc-cursor-animations.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cursor Animations",
      "properties": {
        "vsc-cursor-animations.velocity": {
          "type": "number",
          "default": 1.45,
          "description": "Velocity of cursor animations in Pixels per second."
        },
        "vsc-cursor-animations.opacity": {
          "type": "number",
          "default": 0.65,
          "description": "Opacity of selection area."
        },
        "vsc-cursor-animations.backgroundImageUrl": {
          "type": "string",
          "description": "Background image URL for the selections."
        },
        "vsc-cursor-animations.wigglyWorm": {
          "type": "boolean",
          "default": false,
          "description": "Enables wiggly worm animation."
        }
      }
    },
    "commands": [
      {
        "command": "vsc-cursor-animations.toggle",
        "title": "Toggle Cursor Animations"
      },
      {
        "command": "vsc-cursor-animations.hyperspace",
        "title": "Travel through hyperspace!"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@webgpu/types": "^0.1.60",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ws": "^8.18.1"
  }
}
